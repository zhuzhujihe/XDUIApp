<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/left_margin"
            android:background="@drawable/path_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="实名认证"
            android:textColor="@color/color_white"
            android:textSize="@dimen/top_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        android:orientation="vertical"

        android:paddingTop="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/color_blue"
                        android:gravity="center"
                        android:text="身份证认证"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/color_white"
                        android:gravity="center"
                        android:text="银行卡认证"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/color_white"
                        android:gravity="center"
                        android:text="安全支付认证"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/middle_text_size" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_orange"
                    android:gravity="left|center_vertical"
                    android:text="请将身份证放置在识别框内，请勿倾斜，并保证对焦清晰无反光"
                    android:textColor="@color/color_yellow"
                    android:textSize="@dimen/small_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/left_margin"
                    android:paddingRight="@dimen/left_margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rect_white"
                        android:gravity="center"
                        android:text="扫描身份证正面" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rect_white"
                        android:gravity="center"
                        android:text="扫描身份证反面" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/color_white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:text="姓名：金灿灿"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/left_margin"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="修改"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/small_text_size" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:paddingLeft="@dimen/left_margin"
                    android:paddingRight="@dimen/left_margin"
                    android:text="身份证：330724198809135631"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_white"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/left_margin"
                    android:paddingRight="@dimen/left_margin"
                    android:text="请核对您的姓名和身份证号码，若有错误请点击上图重新拍照"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/small_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:background="@color/color_white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:text="有效期：2010-11-29至2020-11-29"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/left_margin"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="修改"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/small_text_size" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_white"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/left_margin"
                    android:paddingRight="@dimen/left_margin"
                    android:text="请核对您的姓名和身份证号码，若有错误请点击上图重新拍照"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/small_text_size" />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginRight="@dimen/left_margin"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rect_blue"
                    android:text="下一步"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/middle_text_size" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>