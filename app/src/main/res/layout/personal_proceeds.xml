<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/left_margin"
            android:background="@drawable/path_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="收款"
            android:textColor="@color/color_white"
            android:textSize="@dimen/top_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        android:orientation="vertical"
  >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="收款金额"
            android:textColor="@color/color_gray"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginRight="@dimen/left_margin"
            android:textSize="@dimen/micro_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/top_text_size"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginRight="@dimen/left_margin"
            android:layout_marginTop="10dp"
            android:text="￥ 900"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/color_white"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/left_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="刷卡支付"
                android:textColor="@color/color_black"
                android:drawableLeft="@drawable/paybycard"
                android:drawablePadding="10dp"
                android:textSize="@dimen/middle_text_size" />

            <Button
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/path_right" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/left_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="无卡支付"
                android:textColor="@color/color_black"
                android:drawableLeft="@drawable/pay_nocard"
                android:drawablePadding="10dp"
                android:textSize="@dimen/middle_text_size" />

            <Button
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/path_right" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/left_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="二维码支付"
                android:textColor="@color/color_black"
                android:drawableLeft="@drawable/pay_by_pic"
                android:drawablePadding="10dp"
                android:textSize="@dimen/middle_text_size" />

            <Button
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/path_right" />
        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginRight="@dimen/left_margin"
            android:layout_marginTop="50dp"
            android:background="@drawable/rect_blue"
            android:text="确认收款"
            android:textColor="@color/color_white"
            android:textSize="@dimen/middle_text_size" />


    </LinearLayout>
</LinearLayout>