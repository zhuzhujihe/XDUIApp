<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2A76EE"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/cardlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="56dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/cardimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@drawable/card_detail" />

            <TextView
                android:id="@+id/cardtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="卡管理"
                android:textSize="16sp"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cashlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="62dp"
            android:layout_marginTop="56dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/cashimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@drawable/shoukuan" />

            <TextView
                android:id="@+id/cashtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="收款"
                android:textSize="16sp"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >
        
        
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fenlunlayout"
            android:layout_marginTop="28dp"
        
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/round_2"
                android:layout_marginBottom="8dp"
                android:id="@+id/fenlunimg" />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的分润"
                android:textSize="12sp"
                android:textColor="#2A76EE"
                android:id="@+id/fenluntext"
                android:layout_marginBottom="16dp"
                />
        </LinearLayout>
        
        
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minelayout"
            android:layout_marginTop="28dp"
            android:layout_marginRight="42dp"
            android:gravity="center"
            android:layout_toLeftOf="@id/fenlunlayout"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wodezhanghu"
                android:layout_marginBottom="8dp"
                android:id="@+id/mineimg" />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的账户"
                android:textColor="#2A76EE"
                android:id="@+id/minetext"
                android:textSize="12sp"
                android:layout_marginBottom="16dp"
                />
        </LinearLayout>
        
         
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zhangdanlayout"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="42dp"
            android:gravity="center"
             android:layout_toRightOf="@id/fenlunlayout"
            
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tixing"
                android:layout_marginBottom="8dp"
                android:id="@+id/zhangdanimg" />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账单查询"
                android:textColor="#2A76EE"
                android:id="@+id/zhangdantext"
                 android:textSize="12sp"
                android:layout_marginBottom="16dp"
                />
        </LinearLayout>
        
        
        
          
           <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/huilayout"
            android:layout_marginTop="44dp"
            android:layout_below="@id/zhangdanlayout"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fangxing_2"
                android:layout_marginBottom="8dp"
                android:id="@+id/huiimg" />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 惠生活  "
                android:textSize="12sp"
                android:textColor="#2A76EE"
                android:id="@+id/huitext"
                android:layout_marginBottom="16dp"
                />
        </LinearLayout>
        
        
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shanghulayout"
            android:layout_marginTop="44dp"
            android:layout_marginRight="42dp"
            android:gravity="center"
            android:layout_below="@id/zhangdanlayout"
            android:layout_toLeftOf="@id/huilayout"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cnsc8"
                android:layout_marginBottom="8dp"
                android:id="@+id/shanghuimg" />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的商户"
                android:textColor="#2A76EE"
                android:id="@+id/shanghutext"
                android:textSize="12sp"
                android:layout_marginBottom="16dp"
                />
        </LinearLayout>
        
         
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/youhuilayout"
            android:layout_marginTop="44dp"
            android:layout_marginLeft="42dp"
            android:gravity="center"
            android:layout_below="@id/zhangdanlayout"
             android:layout_toRightOf="@id/huilayout"
            
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yuanque"
                android:layout_marginBottom="8dp"
                android:id="@+id/youhuiimg" />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要优惠"
                android:textColor="#2A76EE"
                android:id="@+id/youhuitext"
                 android:textSize="12sp"
                android:layout_marginBottom="16dp"
                />
        </LinearLayout>
        
        
        
        
    </RelativeLayout>

    <ImageView 
          android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/homeimg"
            android:src="@drawable/boss"
        />
</LinearLayout>