<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/left_margin"
            android:background="@drawable/path_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="无卡支付"
            android:textColor="@color/color_white"
            android:textSize="@dimen/top_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/left_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="支付金额"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="￥ 900"
                android:textColor="@color/color_yellow"
                android:textSize="@dimen/top_text_size"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="10dp"
            android:text="请选择支付通道"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/micro_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/left_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pay_nocard"
                android:drawablePadding="10dp"
                android:text="无卡支付"
                android:textColor="@color/color_black"
                android:textSize="@dimen/middle_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="40dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_yellow"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="D+0"
                    android:textColor="@color/color_yellow"
                    android:textSize="@dimen/micro_text_size" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_blue_kong"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="秒到账"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/micro_text_size" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_green"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="可收他人卡"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_green"
                    android:textSize="@dimen/micro_text_size" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_blue02"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="绑卡带积分"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_blue02"
                    android:textSize="@dimen/micro_text_size" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="额度：0-20000元/笔，当天结算最高10万元"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/micro_text_size"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="费率：0.53%"
                android:textColor="@color/color_yellow"
                android:textSize="@dimen/micro_text_size"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>