<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/left_margin"
            android:background="@drawable/path_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="结算卡信息"
            android:textColor="@color/color_white"
            android:textSize="@dimen/top_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/left_margin">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="账号："
                android:textColor="@color/color_black"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6546132111"
                android:textColor="@color/color_black"
                android:textSize="@dimen/middle_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/left_margin">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="真实姓名："
                android:textColor="@color/color_black"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="夏雨"
                android:textColor="@color/color_black"
                android:textSize="@dimen/middle_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/left_margin">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="身份证号码："
                android:textColor="@color/color_black"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="331003 **** **** 3603"
                android:textColor="@color/color_black"
                android:textSize="@dimen/middle_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/left_margin">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="银行卡号："
                android:textColor="@color/color_black"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6222 **** **** 3603"
                android:textColor="@color/color_black"
                android:textSize="@dimen/middle_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/left_margin">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="所属银行："
                android:textColor="@color/color_black"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请选择 所属银行"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/middle_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/left_margin">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="银行支行："
                android:textColor="@color/color_black"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请选择 银行支行"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/middle_text_size" />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginRight="@dimen/left_margin"
            android:layout_marginTop="50dp"
            android:background="@drawable/rect_blue"
            android:text="更换结算卡"
            android:textColor="@color/color_white"
            android:textSize="@dimen/middle_text_size" />
    </LinearLayout>
</LinearLayout>