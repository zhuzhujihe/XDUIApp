<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_recharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginTop="@dimen/top_margin"
        android:text="@string/personal_operation_recharge"
        android:textColor="@color/color_black"
        android:textSize="@dimen/middle_text_size" />

    <TextView
        android:id="@+id/tv_recharge_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_recharge"
        android:layout_below="@+id/tv_recharge"
        android:layout_marginTop="@dimen/top_margin"
        android:text="@string/personal_recharge_item_text"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/micro_text_size" />

    <TextView
        android:id="@+id/tv_recharge_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/left_margin"
        android:layout_marginTop="@dimen/top_margin"
        android:text="2018-01-08"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/micro_text_size" />

    <TextView
        android:id="@+id/tv_recharge_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_recharge_detail"
        android:layout_alignRight="@+id/tv_recharge_date"
        android:text="+6.00"
        android:textColor="@color/color_black"
        android:textSize="@dimen/middle_text_size" />
</RelativeLayout>